---
const props = Astro.props;
---

<div class="relative group z-0 flex">
    <div
        class="absolute inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask:linear-gradient(225deg,transparent,transparent_10px,black_10px)] group-focus-within:outline-fuchsia-500 -z-10"
    >
    </div>
    <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="absolute right-0 top-0 text-zinc-700 group-focus-within:text-fuchsia-500 -z-10"
    >
        <path
            d="M0 1H12.2667L23 11.7333V24"
            stroke="currentColor"
            stroke-width="2"></path>
    </svg>
    <textarea {...props}></textarea>
</div>
